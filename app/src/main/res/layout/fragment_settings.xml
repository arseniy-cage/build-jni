<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="24dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:text="Настройки приложения" android:fontFamily="@font/montserrat_bold"/>
    <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Смена ника:" android:fontFamily="@font/montserrat_bold"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/changeNik" android:background="@drawable/nik_rectangle" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="12dp">
        <EditText android:textSize="16sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:textColorHint="@color/menuText" android:id="@+id/editText" android:background="@drawable/button_red_stroke_rectangle" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Введите свой ник" android:singleLine="true" android:maxLength="20" android:digits="abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ" android:inputType="textCapSentences" android:fontFamily="@font/montserrat_bold"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_rectangle"
            android:padding="12dp"
            android:src="@drawable/edit" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/server_rectangle" android:paddingLeft="16dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/reinstallGame" android:background="@drawable/button_red_rectangle" android:layout_width="match_parent" android:layout_height="50dp" android:text="Переустановить игру" android:fontFamily="@font/montserrat_bold"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/reinstallClient" android:background="@drawable/button_red_rectangle" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="16dp" android:text="Переустановить клиент" android:fontFamily="@font/montserrat_bold"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/resetSettings" android:background="@drawable/button_red_stroke_rectangle" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="16dp" android:text="Сбросить настройки" android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
</LinearLayout>
