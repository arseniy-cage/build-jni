<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_129sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="horizontal" >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_8sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_news" />

        <TextView android:textSize="@dimen/_9sdp" android:textColor="#ffffff" android:layout_gravity="bottom" android:id="@+id/tvNewsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/_8sdp" android:text="Встречайте новый лаунчер для вашего смартфона" android:fontFamily="@font/montserrat_bold"/>
</FrameLayout>
