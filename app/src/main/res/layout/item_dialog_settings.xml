<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dialog_background" android:paddingLeft="16dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp">
    <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/montserrat_bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/cancel"
            android:background="@drawable/button_red_rectangle"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:text="Отмена"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_bold"
            android:layout_width="0dp" />
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/ok" android:background="@drawable/button_red_rectangle" android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="8dp" android:layout_marginTop="16dp" android:text="Ок" android:layout_weight="1" android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
</LinearLayout>
